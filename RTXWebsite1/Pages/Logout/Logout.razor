@page "/logout"


@inherits LayoutComponentBase
@inject RTXWebsite1.Data.Cookies Cookie;
@inject NavigationManager NavManager;



<h1 div class = "title-head">Logout</h1>

<hr />


<h5> Are you sure you want to logout? </h5>


        
 <button class="btn btn-primary" @onclick= "(() => LogoutMethod())"> Yes </button>


 <button class="btn btn-primary" @onclick= "(() => GoToHome())"> No </button>
   

@code {

    // Method name must be different from class name
    public async Task LogoutMethod()
    {
        Cookie.UserID = 0;
        NavManager.NavigateTo("/login");
    }

    public async Task GoToHome()
    {
        NavManager.NavigateTo("/");
    }

}
